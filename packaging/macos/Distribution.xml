<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="2">
    <title>SafeChain Ultimate</title>
    <organization>com.aikidosecurity</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" />
    
    <!-- Background image for installer window (optional) -->
    <background file="background.png" mime-type="image/png" alignment="bottomleft" scaling="none" />
    <background-darkAqua file="background.png" mime-type="image/png" alignment="bottomleft" scaling="none" />
    
    <!-- Define documents displayed at various steps -->
    <welcome file="welcome.html" mime-type="text/html" />
    <license file="license.txt" mime-type="text/plain" />
    <conclusion file="conclusion.html" mime-type="text/html" />
        
    <!-- Define the installer choices -->
    <choices-outline>
        <line choice="default">
            <line choice="com.aikidosecurity.safechainultimate"/>
        </line>
    </choices-outline>
    
    <choice id="default"/>
    <choice id="com.aikidosecurity.safechainultimate" visible="false">
        <pkg-ref id="com.aikidosecurity.safechainultimate"/>
    </choice>
    
    <pkg-ref id="com.aikidosecurity.safechainultimate" version="VERSION_PLACEHOLDER" onConclusion="none">SafeChainUltimate.ARCH_PLACEHOLDER.pkg</pkg-ref>
    
    <!-- Requirements -->
    <installation-check script="pm_install_check();"/>
    <script>
    <![CDATA[
        function pm_install_check() {
            if(!(system.compareVersions(system.version.ProductVersion, '10.15') >= 0)) {
                my.result.title = 'Unable to install';
                my.result.message = 'SafeChain Ultimate requires macOS 10.15 or later.';
                my.result.type = 'Fatal';
                return false;
            }
            return true;
        }
    ]]>
    </script>
</installer-gui-script>
